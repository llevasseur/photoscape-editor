{
  "name": "nt-brew",
  "description": "Automate photoscape project files for nucks talk images.",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "homepage": "./",
  "dependencies": {
    "electron-is-packaged": "^1.0.2"
  },
  "scripts": {
    "app": "electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "nuckstalk.com",
    "productName": "NucksTalkBrew",
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-dmg": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "axios": "^1.6.7",
    "electron": "^29.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  }
}
